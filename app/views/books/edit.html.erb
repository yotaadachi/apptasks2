<div class="container">
 <p id="notice"></p>
 <h2 class="headline" style="padding-top: 50px;">Editing Book</h2>
 <%= form_for(@book) do |f| %>
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
  <label for="book_opinion">Opinion</label>
  <%= f.text_field :body %>
  <%= f.submit "Update Book" %>
 <% end %>
 <%= link_to "Show", book_path(@book) %>
 <%= link_to "Back", books_path %>
 <% if flash[:notice] %>
  <div class="flash">
  <%= flash[:notice] %>
  </div>
 <% end %>
 <% if @book.errors.any? %>
  <p>errors prohibited this book from being saved:</p>
 <% end %>
</div>